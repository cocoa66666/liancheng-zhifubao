/* 波浪 */
.info {
	width: 364rpx;
	height: 364rpx;
	position: absolute;
	top: 0;
	left: 0;
	background-color: rgba(254, 183, 41, 1);
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.a {
	position: absolute;
	left: 50%;
	top: 0;
	width: 728rpx;
	height: 728rpx;
	background: rgba(254, 230, 110, 1);
	-webkit-animation: roateOne 5s linear infinite;
	        animation: roateOne 5s linear infinite;
	-webkit-border-radius: 47%;
	        border-radius: 47%;
	-webkit-transform: translate(-50%, -100%) rotate(0);
	        transform: translate(-50%, -100%) rotate(0);
	z-index: 10;
}
.b {
	position: absolute;
	left: 50%;
	top: 0;
	width: 728rpx;
	height: 728rpx;
	background: rgba(254, 230, 110, .3);
	-webkit-animation: roateOne1 5s linear infinite;
	        animation: roateOne1 5s linear infinite;
	-webkit-border-radius: 43%;
	        border-radius: 43%;
	-webkit-transform: translate(-50%, -100%) rotate(0);
	        transform: translate(-50%, -100%) rotate(0);
	z-index: 20;
}
@-webkit-keyframes roateOne {
50% {
		-webkit-transform: translate(-50%, -101%) rotate(180deg);
		        transform: translate(-50%, -101%) rotate(180deg);
}
100% {
		-webkit-transform: translate(-50%, -100%) rotate(360deg);
		        transform: translate(-50%, -100%) rotate(360deg);
}
}
@keyframes roateOne {
50% {
		-webkit-transform: translate(-50%, -101%) rotate(180deg);
		        transform: translate(-50%, -101%) rotate(180deg);
}
100% {
		-webkit-transform: translate(-50%, -100%) rotate(360deg);
		        transform: translate(-50%, -100%) rotate(360deg);
}
}
@-webkit-keyframes roateOne1 {
50% {
		-webkit-transform: translate(-50%, -101%) rotate(180deg);
		        transform: translate(-50%, -101%) rotate(180deg);
}
100% {
		-webkit-transform: translate(-50%, -100%) rotate(360deg);
		        transform: translate(-50%, -100%) rotate(360deg);
}
}
@keyframes roateOne1 {
50% {
		-webkit-transform: translate(-50%, -101%) rotate(180deg);
		        transform: translate(-50%, -101%) rotate(180deg);
}
100% {
		-webkit-transform: translate(-50%, -100%) rotate(360deg);
		        transform: translate(-50%, -100%) rotate(360deg);
}
}

