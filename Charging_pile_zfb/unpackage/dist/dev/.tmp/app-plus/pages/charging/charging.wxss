/* 波浪 */
.info {
	width: 364rpx;
	height: 364rpx;
	position: absolute;
	top: 0;
	left: 0;
	background-color: rgba(85, 201, 125, 1);
	border-radius: 50%;
}
.a {
	position: absolute;
	left: 50%;
	min-width: 728rpx;
	min-height: 728rpx;
	background: rgba(187, 233, 203, 1);
	-webkit-animation: roateOne 10s linear infinite;
	        animation: roateOne 10s linear infinite;
	border-radius: 47%;
}
.b {
	position: absolute;
	left: 50%;
	min-width: 728rpx;
	min-height: 728rpx;
	background: rgba(187, 233, 203, .5);
	-webkit-animation: roateOne1 10s linear infinite;
	        animation: roateOne1 10s linear infinite;
	border-radius: 43%;
}
@-webkit-keyframes roateOne {
0% {
		-webkit-transform: translate(-50%, 0) rotateZ(0deg);
		        transform: translate(-50%, 0) rotateZ(0deg);
}
50% {
		/* transform: translate(-50%, -4%) rotateZ(360deg); */
		-webkit-transform: translate(-50%, 0) rotateZ(360deg);
		        transform: translate(-50%, 0) rotateZ(360deg);
}
100% {
		-webkit-transform: translate(-50%, 0%) rotateZ(720deg);
		        transform: translate(-50%, 0%) rotateZ(720deg);
}
}
@keyframes roateOne {
0% {
		-webkit-transform: translate(-50%, 0) rotateZ(0deg);
		        transform: translate(-50%, 0) rotateZ(0deg);
}
50% {
		/* transform: translate(-50%, -4%) rotateZ(360deg); */
		-webkit-transform: translate(-50%, 0) rotateZ(360deg);
		        transform: translate(-50%, 0) rotateZ(360deg);
}
100% {
		-webkit-transform: translate(-50%, 0%) rotateZ(720deg);
		        transform: translate(-50%, 0%) rotateZ(720deg);
}
}
@-webkit-keyframes roateOne1 {
0% {
		-webkit-transform: translate(-50%, 0) rotateZ(0deg);
		        transform: translate(-50%, 0) rotateZ(0deg);
}
50% {
		/* transform: translate(-50%, -2%) rotateZ(270deg); */
		-webkit-transform: translate(-50%, 0) rotateZ(270deg);
		        transform: translate(-50%, 0) rotateZ(270deg);
}
100% {
		-webkit-transform: translate(-50%, 0%) rotateZ(540deg);
		        transform: translate(-50%, 0%) rotateZ(540deg);
}
}
@keyframes roateOne1 {
0% {
		-webkit-transform: translate(-50%, 0) rotateZ(0deg);
		        transform: translate(-50%, 0) rotateZ(0deg);
}
50% {
		/* transform: translate(-50%, -2%) rotateZ(270deg); */
